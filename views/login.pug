doctype html
html
	head
		title #{blog.name}-登陆
		link(href=`${root}css/style.css`,rel="stylesheet")
	body
		.container
			.formLogin
				form(action="",method="POST")
					fieldset
						legend 开始登陆
						.formItem 账号　
							input(type="text",name="username")
